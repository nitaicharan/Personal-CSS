{
  "name": "personal-css",
  "version": "1.0.0",
  "description": ":books: This project was part of my personal study about the style sheet language Cascading Style Sheets (CSS).",
  "main": "index.js",
  "scripts": {
    "server": "live-server --no-browser",
    "compile": "sass --style expanded --watch src/sass/main.scss src/css/style.css",
    "build": "copyfiles --up 1 --exclude src/sass src/*  build/",
    "start": "npm-run-all --parallel server compile"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nitaicharan/Personal-CSS.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/nitaicharan/Personal-CSS/issues"
  },
  "homepage": "https://github.com/nitaicharan/Personal-CSS#readme",
  "devDependencies": {
    "copyfiles": "^2.4.1",
    "live-server": "^1.2.1",
    "npm-run-all": "^4.1.5",
    "sass": "^1.37.0"
  }
}